@using ViewModel
@model InvoiceVM


@using (Html.BeginForm("Create", "Invoices", FormMethod.Post))
{
    <div dir="rtl">

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CustomerName"></label>
                    <input asp-for="CustomerName" required class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BranchName" class="form-label">الفروع  * :</label>
                    <select asp-for="BranchId" required asp-items="@Model.BranchList" class="form-control">
                        <option value="">-- إختر--</option>
                    </select>
                </div>
            </div>
            
            <div class="col-md-8">
                <div id="invoiceDetails" class="row">
                </div>
                <div col-md-6>
                    <table class="table" id="cart-table">
                        <thead>
                            <tr>

                                <th>إسم المنتج</th>
                                <th> الكمية</th>
                                <th> السعر</th>
                                <th> ##</th>
                            </tr>
                        </thead>
                        <tbody ></tbody>
                    </table>
                    <div class="mt-3">
                        <div class="mb-2">
                            <span class="mb-3">إجمالى الفاتورة</span> <p style="display:inline" id="totalCost"> </p>
                        </div>
                        <div>
                            <button class="btn btn-success"  type="submit" id="generateInvoice"> تاكيد عمل الفاتورة </button>
                            @Html.ActionLink("  رجوع","Index", null, htmlAttributes: new { @class = "btn btn-primary" })

                        </div>
                        <input type="hidden" id="invoiceDetailsJson" name="InvoiceDetailsJson" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}
<form dir="rtl" id="items">
    <div class="row mt-3">
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label" for="itemName">إسم المنتج</label>
                <input id="itemName" class="form-control itemName" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label" for="itemCount">الكمية</label>
                <input id="itemCount" type="number" class="form-control itemCount" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label" for="itemPrice">السعر</label>
                <input id="itemPrice" type="number" class="form-control itemPrice" />
            </div>
        </div>
        <div class="col-12 m-3">
            <button type="submit" id="item-form" class="btn btn-primary ">إضافة للفاتورة</button>
        </div>

    </div>
</form>

