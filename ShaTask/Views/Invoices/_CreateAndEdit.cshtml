@model InvoiceVM


<form asp-action="Create" asp-controller="Invoices" method="post">
    <div dir="rtl">

        <div class="row">
            <div class="row col-md-12">
                <div class="form-group col-md-6">
                    <label asp-for="CustomerName"></label>
                    <input asp-for="CustomerName" required class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="BranchName" class="form-label">الفروع  * :</label>
                    <select asp-for="BranchID" required asp-items='new SelectList(Model.BranchList,"BranchID","BranchName")' class="form-control">
                        <option value="">-- إختر--</option>
                    </select>
                </div>
            </div>
            <div id="item-continer" class=" mt-3 item-continer"  >
            <div class="show-items mb-2 row">
                    <div class="col-md-2  itemClone">
                        <div class="form-group ">
                            <label class="form-label" for="itemName">إسم المنتج</label>
                            <input id="itemName" required class="form-control itemName " />
                        </div>
                    </div>
                    <div class="col-md-2  itemClone">
                        <div class="form-group">
                            <label class="form-label"  for="itemCount">الكمية</label>
                            <input id="itemCount" required type="number" min="1" class="form-control itemCount" />
                        </div>
                    </div>
                    <div class="col-md-2 itemClone">
                        <div class="form-group ">
                            <label class="form-label" for="itemPrice">السعر</label>
                            <input id="itemPrice" required type="number" min="0" class="form-control itemPrice " />
                        </div>
                    </div>
                    <div class="col-md-2 itemClone">
                        <div class="form-group">
                            <label class="form-label" >الاجمالى</label>
                            <input id="totalForEachItem" type="number" readonly class="form-control total" />
                        </div>
                    </div>
            </div>
              

            </div>
            <div>
                <div class="col-12 m-3">
                    <button id="add-new" type="button" class="btn btn-primary ">إضافة صنف جديد</button>


                </div>
            </div>
            <div class="d-flex justify-content-center "> 
                <input id="total-cost" class="btn btn-outline-success h6 w-50 text-center" />
            </div>
           
           <input type="hidden" id="invoiceDetailsJson" name="InvoiceDetailsJson"/>
            <button id="generate-inv" type="submit" class="btn btn-primary "> تاكيد عمل الفاتورة</button>

        </div>
    </div>
</form>
